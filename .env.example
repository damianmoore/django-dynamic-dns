# Django Dynamic DNS Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
# Set to 'dev' for development, 'prd' for production
ENV=dev

# Port Configuration
# HTTP port for the web interface
HTTP_PORT=8008
# DNS port for the built-in DNS server (UDP)
DNS_PORT=8053

# Database Configuration
POSTGRES_DATABASE=dynamicdns
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Admin User Configuration
# Initial admin user created on first run
ADMIN_USER=admin
ADMIN_PASSWORD=password

# Django Security Configuration
# Comma-separated list of allowed hosts
# Example: yourdomain.com,www.yourdomain.com,localhost
# Leave empty to allow all hosts (not recommended for production)
ALLOWED_HOSTS=

# Comma-separated list of trusted origins for CSRF protection
# Example: https://yourdomain.com,https://www.yourdomain.com
# Leave empty to use defaults (http://localhost:8008,http://127.0.0.1:8008)
CSRF_TRUSTED_ORIGINS=

# DNS Provider Configuration
# Uncomment and configure the provider you want to use

# Rackspace Cloud DNS
#RACKSPACE_USERNAME=your_rackspace_username
#RACKSPACE_API_KEY=your_rackspace_api_key

# DigitalOcean DNS
#DIGITALOCEAN_CLIENT_ID=your_digitalocean_client_id
#DIGITALOCEAN_API_KEY=your_digitalocean_api_key

# AWS Route53
#AWS_ACCESS_KEY_ID=your_aws_access_key_id
#AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
#AWS_REGION=us-east-1
#AWS_HOSTED_ZONE_ID=your_hosted_zone_id

# Hetzner Cloud DNS (Console > Networking > DNS)
#HETZNER_API_TOKEN=your_hetzner_api_token
#HETZNER_ZONE_ID=your_hetzner_zone_id
